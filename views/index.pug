extends layout
block content
  link(rel='stylesheet' href='/stylesheets/index.css')
  script(src='/scripts/main-page.js')
  .container 
    .upper
      h1#username='Welcome, '
      h1#location='You\'re doing a quiz for: '

    .popup 
      h1='Terms of Use'
      .gdpr 
        include ./gdpr.pug
      button(onclick='acceptGDPR()').accept='Accept'
    .lower
      #leaderboard

      .start
        button.start-quiz(onclick='window.location.href="/quiz"')='Start the quiz'
          
        .scaling
          button.scale(onclick='body.style.fontSize = "100%"')='Normal' 
          button.scale(onclick='body.style.fontSize = "125%"')='Medium'
          button.scale(onclick='body.style.fontSize = "150%"')='Large'
        
        


